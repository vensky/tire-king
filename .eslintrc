{
  "overrides": [
    {
      "files": [ "src/js/_components/*.js" ],
      "extends": [
        "standard",
        "htmlacademy/es6"
      ],
      "rules": {
        "indent": [
          "error",
          4
        ],
        "semi": [
          "error",
          "always", { "omitLastInOneLineBlock": true }
        ],
        "quotes": [
          "error",
          "single"
        ]
      }
    }
  ]
}
